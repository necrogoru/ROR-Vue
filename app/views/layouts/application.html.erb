<!DOCTYPE html>
<html>
  <head>
    <title>RailsVueApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': true %>
  </head>

  <body>

    <div id="body">

      <header>
        <%= render "partials/header" %>
      </header>

      <main>
        <h1>{{greeting}}</h1>
        <%= yield %>
      </main>

      <footer>
        <%= render "partials/footer" %>
      </footer>

    </div>

  </body>
</html>
